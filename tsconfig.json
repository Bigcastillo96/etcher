{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "lib/**/*.ts",
    "node_modules/electron/**/*.d.ts"
  ]
}
